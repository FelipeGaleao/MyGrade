<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/ed_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="356dp"
        android:layout_marginBottom="18dp"
        android:ems="14"
        android:hint="Insira seu nome"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/ed_QtdFaltas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_Iniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginTop="208dp"
        android:text="Ver meu resultado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_nome" />

    <EditText
        android:id="@+id/ed_QtdFaltas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:hint="Qtd. de faltas"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/ed_NotaP1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_nome" />

    <EditText
        android:id="@+id/ed_NotaP1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="14dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/ed_NotaP2"
        app:layout_constraintEnd_toEndOf="@+id/ed_NotaP2"
        app:layout_constraintStart_toStartOf="@+id/ed_NotaP2"
        app:layout_constraintTop_toBottomOf="@+id/ed_QtdFaltas" />

    <EditText
        android:id="@+id/ed_NotaP2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="148dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_NotaP1" />

</androidx.constraintlayout.widget.ConstraintLayout>